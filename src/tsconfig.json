{
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "@src/*": ["./src/*"]
      },
      "target": "ES6",
      "module": "commonjs",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "sourceMap": true,
      "typeRoots": ["./node_modules/@types", "./src/types"],
      "types": ["express", "node"]
    },
    "include": ["./**/*"],
    "exclude": ["node_modules", "dist"]
}